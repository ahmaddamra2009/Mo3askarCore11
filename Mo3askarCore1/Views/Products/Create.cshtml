@model Product
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<form asp-action="Create" asp-controller="Products" method="post">

    <table class="table table-bordered">
        <tr>
            <td>@Html.DisplayNameFor(x => x.Id)</td>
            <td>
            <input asp-for="Id" class="form-control" />
            <span asp-validation-for="Id" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(x => x.ProductName)</td>
            <td>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(x => x.Price)</td>
            <td>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(x => x.Qty)</td>
            <td>
                <input asp-for="Qty" class="form-control" />
                <span asp-validation-for="Qty" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" value="save" class="btn btn-success" />
            </td>
        </tr>
    </table>
</form>


